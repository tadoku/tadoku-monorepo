load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")

go_library(
    name = "migrate_lib",
    srcs = ["main.go"],
    importpath = "github.com/tadoku/tadoku-monorepo/services/tadoku-contest-api/cmd/migrate",
    visibility = ["//visibility:private"],
    deps = [
        "//services/tadoku-contest-api/app",
        "@com_github_davidhuie_gomigrate//:gomigrate",
    ],
)

go_binary(
    name = "migrate",
    embed = [":migrate_lib"],
    visibility = ["//visibility:public"],
)

load("@io_bazel_rules_docker//go:image.bzl", "go_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

go_image(
    name = "base_image",
    goos = "linux",
    goarch = "amd64",
    embed = [":migrate_lib"],
    visibility = ["//visibility:public"],
)

pkg_tar(
    name = "migrations-tar",
    package_dir = "/app/services/tadoku-contest-api/cmd/migrate/base_image.binary.runfiles/__main__/migrations",
    srcs = ["//services/tadoku-contest-api/interfaces/repositories:migrations"],
    mode = "0644",
)

container_image(
    name = "image",
    base = ":base_image",
    tars = [":migrations-tar"],
    stamp = True,
)

container_push(
    name = "image_push",
    format = "Docker",
    image = ":image",
    registry = "ghcr.io",
    repository = "tadoku/tadoku-monorepo/tadoku-contest-api-migrate",
)
